.container{
  width: 300rpx;
  height:100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-radius:10rpx;
  background-color:#F36B5D; 
  color: #fff;
  position: relative;
  margin-left: 10rpx;
  margin-top: 5rpx;
}
.container_left{
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.price{
  width: 80%;
  height: 80%;
  border-right: 1px solid #FA7B6A;
  display: flex;
  justify-content: center;
  align-items: center;
}
.p_left{
  font-size: 18rpx;
  margin-top:10rpx;
  font-weight: bolder;
}
.p_right{
  font-size: 36rpx;
  font-weight: bolder;
}
.container_right{
  width:40%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  font-weight: bold;
}
.c_top{
  width: 10rpx;
  height: 10rpx;
  background-color: #fff;
  position: absolute;
  top:-5rpx;
  right:116rpx;
  border-radius: 50%;
}
.c_bottom{
  width: 10rpx;
  height: 10rpx;
  background-color: #fff;
  position: absolute;
  bottom:-5rpx;
  right:116rpx;
  border-radius: 50%;
}
