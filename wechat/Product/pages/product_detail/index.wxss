/* pages/product_detail/index.wxss */

.container {
  background-color: #f7f7f7;
}

.carousel {
  width: 100%;
  height: 400rpx;
}

.header-img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.product_introduce {
  display: flex;
  flex-direction: column;
  justify-content: center;
  border: 1px solid #eee;
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.product_price {
  display: flex;
  justify-content: space-between;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

view.product_price>view:first-child {
  font-weight: bold;
}

view.product_price>view:last-child {
  color: #e66319;
  font-weight: bold;
}

.product_slogan {
  display: flex;
  font-size: 20rpx;
  color: #d4764b;
}

view.product_slogan view {
  margin-right: 10rpx;
}

.c_img {
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

view.c_img view {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1px solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}

view.c_img image {
  width: 46rpx;
  height: 46rpx;
}

view.c_img view:first-child image {
  width: 36rpx;
  height: 36rpx;
}

view.c_img view:not(:first-child) {
  margin-right: 10rpx;
}

.c_want {
  font-size: 22rpx;
  color: #ccc;
}

.c_coupon {
  display: flex;
  font-size: 22rpx;
  align-items: center;
  margin: 30rpx 0;
}

.c_coupon>text {
  color: #c9c8cd;
  margin-right: 20rpx;
}

.c_coupon view {
  padding: 5rpx 20rpx;
  background-color: #fd7745;
  color: #fff;
  font-weight: bold;
  border-left: 1px dashed #fff;
  border-right: 1px dashed #fff;
  border-radius: 2px;
}

.c_service {
  display: flex;
  font-size: 22rpx;
  color: #c9c8cd;
}

view.c_service view {
  margin-right: 30rpx;
  display: flex;
  align-items: center;
}

view.c_service image {
  width: 30rpx;
  height: 30rpx;
}

view.c_service text {
  font-size: 22rpx;
  color: #a3a3a3;
}

.weui-navbar__slider {
  width: 5rem;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #f36b5d;
  color: #fff;
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}

.aboutme {
  width: 100%;
  height: 1600rpx;
}

.near_store {
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  background-color: white;
  margin-top: 30rpx;
}

.store_content {
  margin-bottom: 120rpx;
  padding-left: 5%;
  padding-right: 5%;
  border-bottom: 1px solid #eee;
}

.store_way {
  display: flex;
  flex-direction: row;
}

.title {
  width: 90%;
  border-bottom: 1px solid #eee;
  margin: auto;
  font-size: 28rpx;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.store_name {
  margin-top: 10rpx;
  margin-bottom: 8rpx;
}

.store_address {
  font-size: 25rpx;
}

.icon-weibiaoti- {
  margin-left: 20rpx;
}

.address_goto {
  margin-left: 20rpx;
}

.distance {
  font-size: 25rpx;
  margin-top: 10rpx;
}

.icon-weibiaoti- {
  color: orange;
  margin-top: 5rpx;
}

.call {
  color: orange;
  font-size: 30rpx;
  margin-top: 5rpx;
}

.address_goto {
  color: orange;
  font-size: 30rpx;
  text-decoration: underline;
  margin-top: 5rpx;
}

.coments {
  display: flex;
  justify-content: center;
  background-color: white;
  margin-top: 30rpx;
  height: 200rpx;
  font-size: 30rpx;
  position: relative;
}

.coments text{
  position: absolute;
  bottom: 0;
}
